# Sistema de Boletos IMED - .htaccess CORRIGIDO PARA LOGOUT
# Arquivo: .htaccess (VERSﾃグ CORRIGIDA)

# 肌 CORREﾃﾃグ: Redirecionamento especﾃｭfico para Breu Branco
RewriteEngine On

# Regra especﾃｭfica para busca de cursos do Breu Branco
RewriteCond %{QUERY_STRING} polo=breubranco\.imepedu\.com\.br
RewriteRule ^admin/api/buscar-cursos\.php$ /admin/api/buscar-cursos-breubranco-especifico.php [L,QSA]

# Resto das regras originais...
RewriteBase /

# Forﾃｧa HTTPS (descomente em produﾃｧﾃ｣o)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 肌 CORREﾃﾃグ 1: Headers de seguranﾃｧa e cache ESPECﾃ孝ICOS PARA LOGOUT
<IfModule mod_headers.c>
    # Headers de seguranﾃｧa padrﾃ｣o
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS para API
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # 肌 CORREﾃﾃグ: Headers especﾃｭficos para logout - NUNCA cachear
    <FilesMatch "(logout\.php)">
        Header always set Cache-Control "no-cache, no-store, must-revalidate, private"
        Header always set Pragma "no-cache"
        Header always set Expires "0"
        Header always set Last-Modified "Thu, 01 Jan 1970 00:00:00 GMT"
        Header always set ETag ""
        Header unset ETag
    </FilesMatch>
    
    # 肌 CORREﾃﾃグ: Index.php com parﾃ｢metros de logout - NUNCA cachear
    <If "%{QUERY_STRING} =~ /logout/">
        Header always set Cache-Control "no-cache, no-store, must-revalidate, private"
        Header always set Pragma "no-cache"
        Header always set Expires "0"
    </If>
    
    # 肌 CORREﾃﾃグ: Login.php pﾃｳs-logout - NUNCA cachear
    <If "%{QUERY_STRING} =~ /logout/">
        Header always set Cache-Control "no-cache, no-store, must-revalidate, private"
        Header always set Pragma "no-cache"
        Header always set Expires "0"
    </If>
    
    # Cache positivo para recursos estﾃ｡ticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # Cache moderado para pﾃ｡ginas normais (nﾃ｣o logout)
    <FilesMatch "\.(php)$">
        # Apenas se Nﾃグ contﾃｩm logout nos parﾃ｢metros
        <If "%{QUERY_STRING} !~ /logout/">
            Header set Cache-Control "private, max-age=3600"
        </If>
    </FilesMatch>
</IfModule>

# 肌 CORREﾃﾃグ 2: Regras especﾃｭficas para logout
<IfModule mod_rewrite.c>
    # Forﾃｧa parﾃ｢metros ﾃｺnicos para logout para evitar cache
    RewriteCond %{REQUEST_URI} ^/logout\.php$
    RewriteCond %{QUERY_STRING} !t=
    RewriteRule ^logout\.php$ /logout.php?t=%{TIME}&r=%{REMOTE_ADDR} [L,R=302]
</IfModule>

# URLs amigﾃ｡veis - rotas especﾃｭficas do sistema
RewriteRule ^login/?$ login.php [L]
RewriteRule ^logout/?$ logout.php [L]
RewriteRule ^dashboard/?$ dashboard.php [L]
RewriteRule ^admin/?$ admin/dashboard.php [L]
RewriteRule ^boleto/([0-9]+)/?$ boleto.php?id=$1 [L]

# API routes
RewriteRule ^api/atualizar-dados/?$ api/atualizar_dados.php [L]
RewriteRule ^api/([a-zA-Z_]+)/?$ api/$1.php [L]

# 肌 CORREﾃﾃグ 3: Remove .php das URLs para arquivos pﾃｺblicos (exceto logout)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/(config|src|logs|vendor)/
RewriteCond %{REQUEST_URI} !logout
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Pﾃ｡gina inicial
DirectoryIndex index.php

# 肌 CORREﾃﾃグ 4: Configuraﾃｧﾃ｣o de expiraﾃｧﾃ｣o especﾃｭfica
<IfModule mod_expires.c>
    ExpiresActive On
    
    # NUNCA expira logout
    <FilesMatch "(logout\.php)">
        ExpiresDefault "access plus 0 seconds"
    </FilesMatch>
    
    # Recursos estﾃ｡ticos
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # Pﾃ｡ginas PHP (exceto logout)
    ExpiresByType text/html "access plus 1 hour"
    
    # APIs
    <FilesMatch "^api/">
        ExpiresDefault "access plus 15 minutes"
    </FilesMatch>
</IfModule>

# 肌 CORREﾃﾃグ 5: Configuraﾃｧﾃ｣o ETags especﾃｭfica
<IfModule mod_headers.c>
    # Remove ETag de logout para forﾃｧar sempre nova requisiﾃｧﾃ｣o
    <FilesMatch "(logout\.php)">
        Header unset ETag
        FileETag None
    </FilesMatch>
</IfModule>

# 肌 CORREﾃﾃグ 6: Previne cache de navegador para logout
<LocationMatch "/logout\.php">
    Header always set Cache-Control "no-cache, no-store, must-revalidate, private"
    Header always set Pragma "no-cache"
    Header always set Expires "Thu, 01 Jan 1970 00:00:00 GMT"
</LocationMatch>

# 肌 CORREﾃﾃグ 7: Configuraﾃｧﾃ｣o especﾃｭfica para Service Worker
<FilesMatch "sw\.js$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
    Header set Service-Worker-Allowed "/"
</FilesMatch>

# 肌 CORREﾃﾃグ 8: Manifest PWA
<FilesMatch "manifest\.json$">
    Header set Content-Type "application/manifest+json"
    Header set Cache-Control "public, max-age=86400"
</FilesMatch>

# 肌 CORREﾃﾃグ 9: Configuraﾃｧﾃ｣o de compressﾃ｣o (melhora performance)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# 肌 CORREﾃﾃグ 10: Configuraﾃｧﾃ｣o de seguranﾃｧa adicional
<IfModule mod_rewrite.c>
    # Bloqueia acesso direto a arquivos sensﾃｭveis
    RewriteRule ^(config|src|logs|vendor)/ - [F,L]
    
    # Bloqueia tentativas de acesso a arquivos de backup
    RewriteRule \.(bak|backup|old|tmp)$ - [F,L]
    
    # Forﾃｧa HTTPS para ﾃ｡rea administrativa (descomente em produﾃｧﾃ｣o)
    # RewriteCond %{HTTPS} off
    # RewriteCond %{REQUEST_URI} ^/admin
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Configuraﾃｧﾃ｣o final de headers para debugging
<IfModule mod_headers.c>
    # Adiciona header para identificar quando cache foi usado
    Header always set X-Cache-Status "MISS"
    
    # Header especﾃｭfico para logout
    <FilesMatch "(logout\.php)">
        Header always set X-Logout-Safe "true"
        Header always set X-Cache-Control "disabled"
    </FilesMatch>
</IfModule>